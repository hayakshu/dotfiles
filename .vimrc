syntax on

" Set line numbers and highlights on searches
set number
set hlsearch

" Indentation settings for using spaces instead of tabs
set tabstop=2
set shiftwidth=2
set expandtab

" Show sign column
set signcolumn=yes

" auto indenting
set ai

" Turn off swap files
set noswapfile
set directory=~/.vim/.tmp,~/tmp,/tmp

set nobackup

" Change terminal's title
set title
